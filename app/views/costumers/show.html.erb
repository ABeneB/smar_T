<%- model_class = Costumer -%>
<% if current_user %>
    <% if current_user.is_admin? || current_user.is_planer?%>
      <div class="page-header">
        <h1><%=t '.title', :default => Costumer %></h1>
      </div>
      
      <div class="fieldset">
        <dl>
            <dt class="label label-default">Name</dt>
            <dd><pre class="prettyprint"><%= @costumer.name %></pre></dd>
            <dt class="label label-default">Addresse</dt>
            <dd><pre class="prettyprint"><%= @costumer.address %></pre></dd>
            <dt class="label label-default">Telefonnummer</dt>
            <dd><pre class="prettyprint"><%= @costumer.telefon %></pre></dd>
            <dt class="label label-default">Priorit√§t</dt>
            <dd><pre class="prettyprint"><%= @costumer.priority %></pre></dd>
        </dl>
      </div>
      
      <div class="form-group">
        <%= link_to t('.back', :default => t("helpers.links.back")),
                    costumers_path, :class => 'btn btn-default'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_costumer_path(@costumer), :class => 'btn btn-default' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    costumer_path(@costumer),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>
      </div>
    <% else %>
    ZUGANG VERWEIGERT
    <% end %>
<% else %>
ZUGANG VERWEIGERT
<% end %>