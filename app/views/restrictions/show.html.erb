<%- model_class = Restriction -%>
<div class="page-header">
  <h1><%=t '.title', :default => Restriction %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:problem) %></dt>
      <dd><pre class="prettyprint"><%= @restriction.problem %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:dynamic) %></dt>
      <dd><pre class="prettyprint"><%= @restriction.dynamic %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:multi_vehicle) %></dt>
      <dd><pre class="prettyprint"><%= @restriction.multi_vehicle %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:time_window) %></dt>
      <dd><pre class="prettyprint"><%= @restriction.time_window %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:capacity_restriction) %></dt>
      <dd><pre class="prettyprint"><%= @restriction.capacity_restriction %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:priorities) %></dt>
      <dd><pre class="prettyprint"><%= @restriction.priorities %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:work_time) %></dt>
      <dd><pre class="prettyprint"><%= @restriction.work_time %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              restrictions_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_restriction_path(@restriction), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restriction_path(@restriction),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

