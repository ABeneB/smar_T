<% if current_user && ( current_user.role == "admin" || (current_user.role == "superadmin" && current_user.company_id?)) %>
  <%= simple_form_for @restriction do |f| %>
    <%= f.input :problem, :collection => {t('dp')  => 'DP', t('pp')  => 'PP', t('pdp') => 'PDP'}, prompt: :translate %>
    <%= f.input :dynamic, prompt: :translate %>
    <%= f.input :multi_vehicle, prompt: :translate %>
    <%= f.input :time_window, prompt: :translate %>
    <%= f.input :capacity_restriction, prompt: :translate %>
    <%= f.input :priorities, prompt: :translate %>
    <%= f.input :work_time, prompt: :translate %>
    <%= f.button :submit, prompt: :translate %>
  <% end %>
<% end %>
