<% if current_user.is_planer? || current_user.is_admin? || (current_user.is_superadmin? && current_user.company_id?)%>
  <%= simple_form_for @customer, validate: true do |f| %>
    <%= f.input :name, prompt: :translate %>
    <%= f.input :address, prompt: :translate, input_html: { id: 'address' } %>
    <%= f.input :telefon, prompt: :translate %>
    <%= f.input :priority, collection: ['A', 'B', 'C', 'D', 'E'], :selected => 'A', prompt: :translate %>
    <%= f.button :submit, prompt: :translate %>
  <% end %>
<% end %>