<% if current_user.role == "admin" %>
  <%= simple_form_for @customer, validate: true do |f| %>
    <%= f.association :company, prompt: :translate %>
    <%= f.input :name, prompt: :translate %>
    <%= f.input :address, prompt: :translate %>
    <%= f.input :telefon, prompt: :translate %>
    <%= f.input :priority, collection: ['A', 'B', 'C', 'D', 'E'], prompt: :translate %>
    <%= f.button :submit, prompt: :translate %>
  <% end %>
<% elsif %>
  <%= simple_form_for @customer, validate: true do |f| %>
    <%= f.input :name, prompt: :translate %>
    <%= f.input :address, prompt: :translate %>
    <%= f.input :telefon, prompt: :translate %>
    <%= f.input :priority, prompt: :translate %>
    <%= f.button :submit, prompt: :translate %>
  <% end %>
<% end %>
