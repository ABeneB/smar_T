<% if current_user.role == "admin" %>
  <%= simple_form_for @customer do |f| %>
    <%= f.association :user, label_method: :username %>
    <%= f.association :company %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :telefon %>
    <%= f.input :priority %>
    <%= f.button :submit %>
  <% end %>
<% elsif %>
  <%= simple_form_for @customer do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :telefon %>
    <%= f.input :priority %>
    <%= f.button :submit %>
  <% end %>
<% end %>
