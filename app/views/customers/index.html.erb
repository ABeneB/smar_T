<%- model_class = Customer -%>
<% if current_user %>
    <% if current_user.is_superadmin? || current_user.is_admin? || current_user.is_planer? %>
      <div class="page-header">
        <h1>Kunden</h1>
      </div>
      <% if current_user.company.nil? %>
        <div class="alert alert-info">Ihrem Benutzeraccount wurde noch kein Unternehmen zugewiesen. Sie können daher keine Kunden anlegen.</div>
      <% else %>
	      <%= link_to t('.new', :default => t("helpers.links.new")), new_customer_path, :class => 'btn btn-primary btn-smart' %>
        <hr/>
        <table class="table table-striped">
          <thead>
            <tr>
              <% if current_user.is_admin? %>
                <th>Unternehmen</th>
              <% end %>
              <th>Name</th>
              <th>Adresse</th>
              <th>Telefonnummer</th>
              <th class="center">Priorität</th>
              <th><%=t '.actions', :default => t("helpers.actions") %></th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <% if current_user.is_admin? %>
                  <% if !customer.company.nil? %>
                    <td><%= customer.company.name %></td>
                  <% else %>
                    <td></td>
                  <% end %>
                <% end %>
                <td><%= customer.name %></td>
                <td><%= customer.address %></td>
                <td><%= customer.telefon %></td>
                <td class="center"><%= customer.priority %></td>
                <td>
                  <%= link_to t('helpers.links.show'), customer, :class => 'btn btn-info btn-xs' %>
                  <%= link_to t('helpers.links.edit'), edit_customer_path(customer), :class => 'btn btn-warning btn-xs' %>
                  <%= link_to t('helpers.links.destroy'), customer, method: :delete, data: { confirm: 'Möchten Sie den Kunden wirklich löschen?' }, :class => 'btn btn-danger btn-xs' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

      <% end %>
    <% else %>
    ZUGANG VERWEIGERT
    <% end %>
<% else %>
ZUGANG VERWEIGERT
<% end %>
