<% if current_user.role == "admin" %>
  <%= simple_form_for @user, :url => registered_users_path, :method => :post do |f| %>
    <%= f.input :username, prompt: :translate %>
    <%= f.input :email, prompt: :translate %>
    <%= f.input :password, prompt: :translate %>
    <%= f.input :role, prompt: :translate %>
    <%= f.button :submit, prompt: :translate %>
  <% end %>
<% end %>