  <%# Jede Rolle hat eine andere Navbar mit den entsprechenden Navigationsoptionen%>

<% if current_user.blank? %>
  <%= render "/elements/navbar_guest" %>
<% elsif current_user.is_admin? %>
  <%= render "/elements/navbar_admin" %>
<% elsif current_user.is_user? %>
  <%= render "/elements/navbar_user" %>
<% elsif current_user.is_driver? %>
  <%= render "/elements/navbar_driver" %>
<% elsif current_user.is_planer? %>
  <%= render "/elements/navbar_planer" %>
<% else %>
  <%# This should not happen%>
  <%= render "/elements/navbar_guest" %>
<% end %>
