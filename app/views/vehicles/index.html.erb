<h1>Listing vehicles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Position</th>
      <th>Capacity</th>
      <th>Duration</th>
      <th>Driver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.user %></td>
        <td><%= vehicle.position %></td>
        <td><%= vehicle.capacity %></td>
        <td><%= vehicle.duration %></td>
        <td><%= vehicle.driver %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

