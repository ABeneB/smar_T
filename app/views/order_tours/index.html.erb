<h1>Listing order_tours</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Order</th>
      <th>Tour</th>
      <th>Company</th>
      <th>Location</th>
      <th>Place</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_tours.each do |order_tour| %>
      <tr>
        <td><%= order_tour.user %></td>
        <td><%= order_tour.order %></td>
        <td><%= order_tour.tour %></td>
        <td><%= order_tour.company %></td>
        <td><%= order_tour.location %></td>
        <td><%= order_tour.place %></td>
        <td><%= link_to 'Show', order_tour %></td>
        <td><%= link_to 'Edit', edit_order_tour_path(order_tour) %></td>
        <td><%= link_to 'Destroy', order_tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

