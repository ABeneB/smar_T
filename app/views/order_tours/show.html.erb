<%- model_class = OrderTour -%>
<% if current_user %>
    <% if current_user.is_admin? %>
      <div class="page-header">
        <h1><%=t '.title', :default => OrderTour %></h1>
      </div>
      
      <div class="fieldset">
        <dl>
            <dt class="label label-default"><%= model_class.human_attribute_name(:location) %></dt>
            <dd><pre class="prettyprint"><%= @order_tour.location %></pre></dd>
            <dt class="label label-default"><%= model_class.human_attribute_name(:place) %></dt>
            <dd><pre class="prettyprint"><%= @order_tour.place %></pre></dd>
        </dl>
      </div>
      
      <div class="form-group">
        <%= link_to t('.back', :default => t("helpers.links.back")),
                    order_tours_path, :class => 'btn btn-default'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_order_tour_path(@order_tour), :class => 'btn btn-default' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    order_tour_path(@order_tour),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>
      </div>
    <% else %>
    ZUGANG VERWEIGERT
    <% end %>
<% else %>
ZUGANG VERWEIGERT
<% end %>
