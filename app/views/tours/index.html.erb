<h1>Listing tours</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Driver</th>
      <th>Company</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.user %></td>
        <td><%= tour.driver %></td>
        <td><%= tour.company %></td>
        <td><%= tour.duration %></td>
        <td><%= link_to 'Show', tour %></td>
        <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
        <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tour', new_tour_path %>
