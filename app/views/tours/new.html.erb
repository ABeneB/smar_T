<%- model_class = Tour -%>
<div class="page-header">
  <h1><%=t '.title', :default => Tour %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Fahrer</th>
      <th>Dauer</th>
      <th>Anfahrpunkte</th>
      <th>Erstellt am</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.id %></td>
        <td><%= tour.driver_id %></td>
        <td><%= tour.duration %></td>
        <td>FIXME Summe der OrderTours</td>
        <td><%=l tour.created_at, format: :long %></td>
        <td><%= link_to 'Show', tour, :class => 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit', edit_tour_path(tour), :class => 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Destroy', tour, method: :delete, 
        data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tour_path,
            :class => 'btn btn-primary' %>
