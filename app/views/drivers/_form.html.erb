<% if current_user.role == "admin" %>
  <%= simple_form_for @driver do |f| %>
    <%= f.association :user, label_method: :username %>
    <%= f.association :company %>
    <%= f.input :name %>
    <%= f.input :working_time %>
    <%= f.input :activ %>
    <%= f.button :submit %>
  <% end %>
<% elsif %>
  <%= simple_form_for @driver do |f| %>
    <%= f.input :name %>
    <%= f.input :working_time %>
    <%= f.input :activ %>
    <%= f.button :submit %>
  <% end %>
<% end %>
