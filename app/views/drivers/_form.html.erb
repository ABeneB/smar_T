<% if current_user.is_admin? || (current_user.is_superadmin? && current_user.company_id?) || current_user.is_planer? %>
  <%= simple_form_for @driver do |f| %>
    <%= f.input :name, prompt: :translate, :disabled => true %>
    <%= f.input :working_time, prompt: :translate %>
    <%= f.input :active, prompt: :translate %>
    <%= f.button :submit, prompt: :translate %>
  <% end %>
<% end %>
