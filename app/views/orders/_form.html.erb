<%= form_for @order, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :pickup_location, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :pickup_location, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :delivery_location, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :delivery_location, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :capacity, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :capacity, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :start_time, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :end_time, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  orders_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
