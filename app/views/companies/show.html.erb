<%- model_class = Company -%>
<div class="page-header">
  <h1><%=t '.title', :default => Company %></h1>
</div>

<% if current_user.role == "admin" %>
  <div class="fieldset">
    <dl>
        <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
        <dd><pre class="prettyprint"><%= @company.name %></pre></dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
        <dd><pre class="prettyprint"><%= @company.address %></pre></dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:telefon) %></dt>
        <dd><pre class="prettyprint"><%= @company.telefon %></pre></dd>
    </dl>
  </div>
  
  <div class="form-group">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                companies_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_company_path(@company), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                company_path(@company),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>
  
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Role</th>
          <th>Email</th>
          <th>Erstellt am</th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @company.users.each do |registered_user| %>
          <tr>
            <td><%= registered_user.id %></td>
            <td><%= registered_user.username %></td>
            <td><%= registered_user.role %></td>
            <td><%= registered_user.email %></td>
            <td><%= registered_user.created_at %></td>
            <td><%= link_to 'Show', registered_user_path(registered_user), :class => 'btn btn-info btn-xs' %></td>
            <td><%= link_to 'Edit', edit_registered_user_path(registered_user), :class => 'btn btn-warning btn-xs' %></td>
            <td><%= link_to 'Destroy', registered_user_path(registered_user ), method: :delete, 
            data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_registered_user_path,
                :class => 'btn btn-primary' %>
                
<% else %>
  ZUGANG VERWEIGERT
<% end %>