<%- model_class = Company -%>
<% if current_user && current_user.role == "admin" %>
  <div class="page-header">
    <h1><%=t '.title', :default => Company %></h1>
  </div>
  <div class="fieldset">
    <dl>
        <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
        <dd><pre class="prettyprint"><%= @company.name %></pre></dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
        <dd><pre class="prettyprint"><%= @company.address %></pre></dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:telefon) %></dt>
        <dd><pre class="prettyprint"><%= @company.telefon %></pre></dd>
    </dl>
  </div>

  <div class="form-group">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                companies_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_company_path(@company), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                company_path(@company),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t('helpers.links.confirm'))) },
                :class => 'btn btn-danger' %>
  </div>

  <% if @company.drivers.count > 0 %>
    <div class="page-header">
      <h1>Fahrer</h1>
    </div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Position</th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @company.drivers.each do |driver| %>
            <tr>
              <td><%= driver.id %></td>
              <td><%= driver.name %></td>
              <td><%= driver.vehicle.try(:position) %></td>
              <td><%= link_to t('helpers.links.show'), driver_path(driver), :class => 'btn btn-info btn-xs' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
<% else %>
  ZUGANG VERWEIGERT
<% end %>
