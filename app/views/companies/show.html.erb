<%- model_class = Company -%>
<% if current_user && current_user.role == "admin" %>
  <div class="page-header">
    <h1><%=t '.title', :default => Company %></h1>
  </div>
  <div class="fieldset">
    <dl>
        <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
        <dd><pre class="prettyprint"><%= @company.name %></pre></dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
        <dd><pre class="prettyprint"><%= @company.address %></pre></dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:telefon) %></dt>
        <dd><pre class="prettyprint"><%= @company.telefon %></pre></dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:google_maps_api_key) %></dt>
        <dd><pre class="prettyprint"><%= @company.google_maps_api_key %></pre></dd>
    </dl>
  </div>

  <div class="form-group">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                companies_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_company_path(@company), :class => 'btn btn-default' %>
  </div>

<% elsif current_user.role == "superadmin" %>
    <div class="page-header">
      <h1><%=t '.title', :default => Company %></h1>
    </div>
    <div class="fieldset">
      <dl>
        <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
        <dd><pre class="prettyprint"><%= @company.name %></pre></dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
        <dd><pre class="prettyprint"><%= @company.address %></pre></dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:telefon) %></dt>
        <dd><pre class="prettyprint"><%= @company.telefon %></pre></dd>
        <dt class="label label-default"><%= model_class.human_attribute_name(:google_maps_api_key) %></dt>
        <dd><pre class="prettyprint"><%= @company.google_maps_api_key %></pre></dd>
      </dl>
    </div>

    <div class="form-group">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  companies_path, :class => 'btn btn-default'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_company_path(@company), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  company_path(@company),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t('helpers.links.confirm'))) },
                  :class => 'btn btn-danger' %>
    </div>
    
<% else %>
  ZUGANG VERWEIGERT
<% end %>
