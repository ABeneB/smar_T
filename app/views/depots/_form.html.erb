<% if current_user.role == "admin" %>
  <%= simple_form_for @depot do |f| %>
    <%= f.association :user %>
    <%= f.association :company %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :duration %>
    <%= f.association :company %>
    <%= f.button :submit %>
  <% end %>
<% elsif %>
  <%= simple_form_for @depot do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :duration %>
    <%= f.association :company %>
    <%= f.button :submit %>
  <% end %>
<% end %>