<% if current_user.role == "admin" %>
  <%= simple_form_for @depot do |f| %>
    <%= f.association :company, prompt: :translate %>
    <%= f.input :name, prompt: :translate %>
    <%= f.input :address, prompt: :translate %>
    <%= f.input :duration, prompt: :translate %>
    <%= f.button :submit, prompt: :translate %>
  <% end %>
<% elsif %>
  <%= simple_form_for @depot do |f| %>
    <%= f.input :name, prompt: :translate %>
    <%= f.input :address, prompt: :translate %>
    <%= f.input :duration, prompt: :translate %>
    <%= f.button :submit, prompt: :translate %>
  <% end %>
<% end %>
